{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ESNext"],
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
  }
  